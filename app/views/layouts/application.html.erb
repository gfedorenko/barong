<!DOCTYPE html>
<html>
  <head>
    <title>Barong</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'web', media: 'all' %>
    <%= domain_stylesheet_tag(domain_asset :stylesheet) %>
    <%= javascript_include_tag 'web' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="devise">
    <%= domain_html_tag(domain_asset :header) %>
    <div class="container-fluid">

      <div class="row justify-content-center">
        <div class="mt-5 mb-5 mx-4 main-card">

          <div class="card">

            <% unless alert.blank? %>
              <span class="alert alert-danger mb-0">
                <i class="icon icon-cancel-circled"></i> <h3><%= alert %></h3>
              </span>
            <% end %>

            <% unless notice.blank? %>
              <span class="alert alert-success mb-0">
                <i class="icon icon-cancel-circled"></i> <h3><%= notice %></h3>
              </span>
            <% end %>

            <div classs="pt-2">
              <%= yield %>
            </div>

            <% if account_signed_in? %>
              <%= render 'layouts/shared/account_footer' %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
    <%= domain_html_tag(domain_asset :footer) %>

    <% if controller_name == 'profiles' %>
      <link rel="stylesheet" type="text/css" href="https://ws1.postescanada-canadapost.ca/css/addresscomplete-2.30.min.css?key=cf87-rj21-kc73-dh41" />
      <script type="text/javascript" src="https://ws1.postescanada-canadapost.ca/js/addresscomplete-2.30.min.js?key=cf87-rj21-kc73-dh41"></script>
      <%= javascript_include_tag 'pca' %>
    <% end %>
  </body>
</html>
